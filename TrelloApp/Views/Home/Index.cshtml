@using System.Security.Claims;
@{
    ViewData["Title"] = "Home Page";
}
@section Estilos {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
}

<div class="text-center centrar-div">
    @if (User.Identity!.IsAuthenticated)
    {
        <h1 class="display-1">
            <span class="display-3 fw-bold">Bienvenido Sr. @User.Claims.Where(c => c.Type == ClaimTypes.Name).Select(c => c.Value).SingleOrDefault() ✨</span>
            <img src="~/img/JeffJuicy.png" width="200"/>
        </h1>
        <a href="/Tableros/Index" class="btn-floating btn-large waves-effect waves-light deep-purple darken-4"><i class="large material-icons">dashboard</i></a>
        <a href="/Home/Index" class="btn-floating btn-large waves-effect waves-light grey darken-1"><i class="large material-icons">person</i></a>
        <a class="btn-floating btn-large waves-effect waves-light red accent-3" asp-controller="Home" asp-action="Salir"><i class="large material-icons">exit_to_app</i></a>
    }  
</div>

@section Scripts{
    <script>
    const currentUrl = window.location.href;
    const boardsLink = document.querySelector('a[href="/Tableros/Index"]');
    const homeLink = document.querySelector('a[href="/Home/Index"]');
    const tableroLink = document.querySelector('a[href="/Tablero/Index"]');

    if (currentUrl.includes('/Home/Index')) {
        boardsLink.style.display = 'none';
        homeLink.style.display = 'none';
        tableroLink.style.display = 'none';
    }
    </script>
}